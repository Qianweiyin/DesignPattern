<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/llContent"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="22dp"
        android:paddingRight="22dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/title_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="title_title_title_"
                    android:textColor="#2d2d2d"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/detail1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="detail1detail1detail1detail1detail1detail1detail1detail1detail1detail1"
                    android:textColor="#2d2d2d"
                    android:textSize="18dp" />

                <!--                                <TextView-->
                <!--                                    android:id="@+id/detail2"-->
                <!--                                    android:layout_width="wrap_content"-->
                <!--                                    android:layout_height="wrap_content"-->
                <!--                                    android:layout_marginTop="10dp"-->
                <!--                                    android:text="detail2detail2detail2detail2detail2detail2detail2detail2detail2detail2"-->
                <!--                                    android:textColor="#2d2d2d"-->
                <!--                                    android:textSize="18dp" />-->


                <TextView
                    android:id="@+id/detail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="#2d2d2d"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/detail3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="detail3detail3detail3detail3detail3detail3detail3"
                    android:textColor="#2d2d2d"
                    android:textSize="18dp" />


            </LinearLayout>

        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#f1f5fb" />

        <LinearLayout
            android:id="@+id/userProtocol"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvProtocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户协议"
                android:textColor="#8da9c0"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隐私政策"
                android:textColor="#8da9c0"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llAgreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/agree"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="#1f7ae1"
            android:gravity="center"
            android:text="同意"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvReject"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffff0000"
            android:gravity="center"
            android:text="拒绝并退出"
            android:textColor="#ffffff"
            android:textSize="18dp" />

    </LinearLayout>


</RelativeLayout>