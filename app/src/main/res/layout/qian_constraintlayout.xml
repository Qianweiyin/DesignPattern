<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        app:layout_constraintBottom_toTopOf="@+id/agree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ScrollView
            android:id="@+id/scrollView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/title_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="title_title_title_"
                    android:textColor="#2d2d2d"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/detail1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="detail1detail1detail1detail1detail1detail1detail1detail1detail1detail1"
                    android:textColor="#2d2d2d"
                    android:textSize="18dp" />

                <!--                <TextView-->
                <!--                    android:id="@+id/detail2"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_marginTop="10dp"-->
                <!--                    android:text="detail2detail2detail2detail2detail2detail2detail2detail2detail2detail2"-->
                <!--                    android:textColor="#2d2d2d"-->
                <!--                    android:textSize="18dp" />-->


                <TextView
                    android:id="@+id/detail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="#2d2d2d"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/detail3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="iil3dilail3deail3detail3detail3detail3detail3detail3detail3detail3detail3detail3detail3detail3l3detail3detail3detail3"
                    android:textColor="#2d2d2d"
                    android:textSize="18dp" />


            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/agree">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#f1f5fb" />

        <LinearLayout
            android:id="@+id/userProtocol"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvProtocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户协议"
                android:textColor="#8da9c0"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隐私政策"
                android:textColor="#8da9c0"
                android:textSize="16dp"
                app:layout_constraintLeft_toRightOf="@+id/tvProtocol" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/agree"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="#1f7ae1"
        android:gravity="center"
        android:text="同意"
        android:textColor="#ffffff"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/tvReject" />

    <TextView
        android:id="@+id/tvReject"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffff0000"
        android:gravity="center"
        android:text="拒绝并退出"
        android:textColor="#ffffff"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>